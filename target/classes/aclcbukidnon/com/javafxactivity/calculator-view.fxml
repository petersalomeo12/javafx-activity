<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="600.0" spacing="20" style="-fx-background-color: #f2f2f2; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aclcbukidnon.com.javafxactivity.controllers.CalculatorController">

   <!-- Display -->
   <HBox alignment="CENTER_RIGHT" prefHeight="60.0">
      <children>
         <Label fx:id="displayLabel" alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="580.0" style="-fx-background-color: transparent; -fx-font-size: 30px; -fx-padding: 10;" text="0" textFill="black">
            <font>
               <Font name="Consolas Bold" size="30.0" />
            </font>
         </Label>
      </children>
   </HBox>

   <!-- Buttons -->
   <GridPane hgap="10" prefWidth="600.0" style="-fx-background-color: black; -fx-padding: 20;" vgap="10">
      <columnConstraints>
         <ColumnConstraints percentWidth="20" />
         <ColumnConstraints percentWidth="20" />
         <ColumnConstraints percentWidth="20" />
         <ColumnConstraints percentWidth="20" />
         <ColumnConstraints percentWidth="20" />
      </columnConstraints>

      <!-- Row 1 -->
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="7" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="8" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="9" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="0" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-op" text="+" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="0" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-func" text="CLEAR" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="0" />

      <!-- Row 2 -->
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="4" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="5" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="6" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-op" text="-" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="1" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-func" text="BCKSPC" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1" />

      <!-- Row 3 -->
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="1" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="2" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="3" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-op" text="/" textFill="WHITE" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-op" text="*" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="2" />

      <!-- Row 4 -->
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="0" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: black;" styleClass="calc-btn" text="." textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button onAction="#onButtonClick" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: black;" styleClass="calc-op" text="=" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
   </GridPane>
</VBox>
