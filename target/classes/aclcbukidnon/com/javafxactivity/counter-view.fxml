<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox
        fx:controller="aclcbukidnon.com.javafxactivity.controllers.CounterController"
        alignment="CENTER" spacing="30.0"
        xmlns="http://javafx.com/javafx/11.0.14-internal"
        xmlns:fx="http://javafx.com/fxml/1"
        prefHeight="400.0" prefWidth="600.0">
   <children>
      <Button fx:id="decrementButton" onAction="#handleDecrement"
              mnemonicParsing="false" prefHeight="156.0" prefWidth="118.0"
              style="-fx-background-color: #0f62fe;" text="-" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Button>
      <Label fx:id="counterLabel" text="0">
         <font>
            <Font size="78.0" />
         </font>
      </Label>
      <Button fx:id="incrementButton" onAction="#handleIncrement"
              mnemonicParsing="false" prefHeight="156.0" prefWidth="118.0"
              style="-fx-background-color: #0f62fe;" text="+" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Button>
   </children>
</HBox>